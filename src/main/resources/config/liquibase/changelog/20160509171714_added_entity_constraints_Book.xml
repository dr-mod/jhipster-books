<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Book.
    -->
    <changeSet id="20160509171714-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="author_id"
                                 baseTableName="book"
                                 constraintName="fk_book_author_id"
                                 referencedColumnNames="id"
                                 referencedTableName="author"/>

        <addForeignKeyConstraint baseColumnNames="books_id"
                                 baseTableName="book_genre"
                                 constraintName="fk_book_genre_genre_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>
        <addForeignKeyConstraint baseColumnNames="genres_id"
                                 baseTableName="book_genre"
                                 constraintName="fk_book_genre_book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="genre"/>
        
    </changeSet>
</databaseChangeLog>
